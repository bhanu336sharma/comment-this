

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

 

  <div class="field">
    <%= f.label :comment %> <br/>
    <%= f.text_field :comment %>
  </div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
